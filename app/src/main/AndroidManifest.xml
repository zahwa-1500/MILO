<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appsnipp.milo">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.appsnipp.milo.HomeActivity"
        android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name="com.appsnipp.milo.detail.DetailPopular" />
        <activity android:name="com.appsnipp.milo.detail.DetailUpcoming" />
        <activity android:name="com.appsnipp.milo.detail.DetailNowPlaying" />

        <activity
            android:name="com.appsnipp.milo.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppNoAction">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>